<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#a6e6e6"
        >
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/set_left"
                android:id="@+id/button_safe_return"
                />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="    余额"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/money"
            android:id="@+id/imageViewMoney" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageViewMoney"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:id="@+id/textViewMoney"
            android:text="¥0.00"
            android:textSize="30sp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="110dp"
            android:layout_below="@+id/textViewMoney"
            android:text="余额提现"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:background="#fb952a"
            />
    </RelativeLayout>
</LinearLayout>